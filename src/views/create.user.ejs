<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <title>Create a user</title>
  </head>
  <body>
    <div style="width: 600px; margin: 0 auto; padding: 10px 0">
      <h3>Create a user</h3>

      <form action="/handele-create-user" method="post">
        <div class="mb-3">
          <label class="form-label">Name: </label>
          <input type="tel" name="fullName" class="form-control" placeholder="your name" />
        </div>
        <div class="mb-3">
          <label class="form-label">Email: </label>
          <input type="email" name="email" class="form-control" placeholder="name@example.com" />
        </div>
        <div class="mb-3">
          <label class="form-label">Address: </label>
          <textarea class="form-control" name="addDress" rows="2"></textarea>
        </div>
        <div class="mb-3">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
  </body>
</html>
